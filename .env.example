# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Telegram
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...
ALLOWED_TELEGRAM_USER_IDS=123456789

# Server
PORT=3141
HOST=0.0.0.0

# Agent defaults
DEFAULT_MAX_BUDGET_USD=1.00
DEFAULT_MODEL=claude-opus-4-6

# Tailscale (for IP allowlisting)
TAILSCALE_IP_PREFIX=100.

# Database
DB_PATH=./data/app.db

# Webhook (optional - enables Telegram webhook mode via Tailscale Funnel)
# TELEGRAM_WEBHOOK_ENABLED=true
# TELEGRAM_WEBHOOK_HOST=your-machine.tailnet-name.ts.net
# TELEGRAM_WEBHOOK_PORT=8443
# TELEGRAM_WEBHOOK_SECRET=       # auto-generated if empty
# TELEGRAM_WEBHOOK_PATH_SECRET=  # auto-generated if empty
